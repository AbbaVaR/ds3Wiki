@model ds3Wiki.Models.Armor

@{
    ViewData["Title"] = "Create";
}

<h1>Создать</h1>

<h4>Броня</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Название:</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Physical_protection" class="control-label">Физическая защита:</label>
                <input asp-for="Physical_protection" class="form-control" />
                <span asp-validation-for="Physical_protection" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fire_protection" class="control-label">Огненная защита:</label>
                <input asp-for="Fire_protection" class="form-control" />
                <span asp-validation-for="Fire_protection" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lightning_protection" class="control-label">Защита от молнии:</label>
                <input asp-for="Lightning_protection" class="form-control" />
                <span asp-validation-for="Lightning_protection" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Magic_protection" class="control-label">Магическая защита:</label>
                <input asp-for="Magic_protection" class="form-control" />
                <span asp-validation-for="Magic_protection" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationId" class="control-label">Id локации</label>
                <select asp-for="LocationId" class ="form-control" asp-items="ViewBag.LocationId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CharacterId" class="control-label">Id персонажа</label>
                <select asp-for="CharacterId" class ="form-control" asp-items="ViewBag.CharacterId"></select>
            </div>
            <div class="form-group">
                <a  class="btn btn-outline-danger mt-3" asp-action="Index">Отмена</a> <input type="submit" value="Создать" class="btn btn-outline-success mt-3" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
