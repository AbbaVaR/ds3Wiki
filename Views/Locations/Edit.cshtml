@model ds3Wiki.Models.Location

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Изменить</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label">Название</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bonfire" class="control-label">Костёр</label>
                <input asp-for="Bonfire" class="form-control" />
                <span asp-validation-for="Bonfire" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game_InfoId" class="control-label">Id игры</label>
                <select asp-for="Game_InfoId" class="form-control" asp-items="ViewBag.Game_InfoId"></select>
                <span asp-validation-for="Game_InfoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-outline-danger mt-3" asp-action="Index">Отмена</a> <input type="submit" value="Сохранить" class="btn btn-outline-success mt-3" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
