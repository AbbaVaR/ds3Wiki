@model ds3Wiki.Models.Sale_magic

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Изменить</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CharacterId" class="control-label">Id персонажа</label>
                <select asp-for="CharacterId" class="form-control" asp-items="ViewBag.CharacterId"></select>
                <span asp-validation-for="CharacterId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MagicId" class="control-label">Id магии</label>
                <select asp-for="MagicId" class="form-control" asp-items="ViewBag.MagicId"></select>
                <span asp-validation-for="MagicId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-outline-danger mt-3" asp-action="Index">Отмена</a> <input type="submit" value="Сохранить" class="btn btn-outline-success mt-3" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
