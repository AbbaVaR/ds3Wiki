@model ds3Wiki.Models.Improvement_path

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Изменить</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Gem_name" class="control-label">Название</label>
                <input asp-for="Gem_name" class="form-control" />
                <span asp-validation-for="Gem_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Advantages" class="control-label">Плюсы</label>
                <input asp-for="Advantages" class="form-control" />
                <span asp-validation-for="Advantages" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Disadvantage" class="control-label">Минусы</label>
                <input asp-for="Disadvantage" class="form-control" />
                <span asp-validation-for="Disadvantage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-outline-danger mt-3" asp-action="Index">Отмена</a> <input type="submit" value="Сохранить" class="btn btn-outline-success mt-3" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
