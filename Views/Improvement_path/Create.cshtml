@model ds3Wiki.Models.Improvement_path

@{
    ViewData["Title"] = "Create";
}

<h1>Создать</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Gem_name" class="control-label"></label>
                <input asp-for="Gem_name" class="form-control" />
