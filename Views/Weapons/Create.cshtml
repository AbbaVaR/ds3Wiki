@model ds3Wiki.Models.Weapon

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Создать</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label">Название</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Types" class="control-label">Тип</label>
                <input asp-for="Types" class="form-control" />
                <span asp-validation-for="Types" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Damage" class="control-label">Урон</label>
                <input asp-for="Damage" class="form-control" />
                <span asp-validation-for="Damage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Distance" class="control-label">Дистанция</label>
                <input asp-for="Distance" class="form-control" />
                <span asp-validation-for="Distance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Support_for_improvement" class="control-label">Возможность улучшения</label>
                <input asp-for="Support_for_improvement" class="form-control" />
                <span asp-validation-for="Support_for_improvement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationId" class="control-label">Id локации</label>
                <select asp-for="LocationId" class="form-control" asp-items="ViewBag.LocationId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CharacterId" class="control-label">Id персонажа</label>
                <select asp-for="CharacterId" class="form-control" asp-items="ViewBag.CharacterId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Character_characteristicId" class="control-label">Id характеристики</label>
                <select asp-for="Character_characteristicId" class="form-control" asp-items="ViewBag.Character_characteristicId"></select>
            </div>
            <div class="form-group">
                <a class="btn btn-outline-danger mt-3" asp-action="Index">Отмена</a> <input type="submit" value="Сохранить" class="btn btn-outline-success mt-3" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
