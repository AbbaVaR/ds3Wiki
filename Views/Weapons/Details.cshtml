@model ds3Wiki.Models.Weapon

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">
    @Html.DisplayFor(model => model.Title)
</h1>
<div class="row align-items-center justify-content-evenly">
    <div class="col-4">
        <ul class="list-group list-group-horizontal">
            <li class="list-group-item list-group-item-info rounded-pill">
               Тип:
            </li>
            <li class="list-group-item border-0">
                @Html.DisplayFor(model => model.Types)
            </li>
        </ul>
        <ul class="list-group list-group-horizontal mt-2">
            <li class="list-group-item list-group-item-info rounded-pill">
                Урон:
            </li>
            <li class="list-group-item border-0">
                @Html.DisplayFor(model => model.Damage)
            </li>
        </ul>
        <ul class="list-group list-group-horizontal mt-2">
            <li class="list-group-item list-group-item-info rounded-pill">
                Дистанция:
            </li>
            <li class="list-group-item border-0">
                @Html.DisplayFor(model => model.Distance)
            </li>
        </ul>
        <ul class="list-group list-group-horizontal mt-2">
            <li class="list-group-item list-group-item-info rounded-pill">
               Возможность улучшения:
            </li>
            <li class="list-group-item border-0">
                @Html.DisplayFor(model => model.Support_for_improvement)
            </li>
        </ul>
        <ul class="list-group list-group-horizontal mt-2">
            <li class="list-group-item list-group-item-info rounded-pill">
                Локация:
            </li>
            <li class="list-group-item border-0">
                @Html.DisplayFor(model => model.Location.Title)
            </li>
        </ul>
        <ul class="list-group list-group-horizontal mt-2">
            <li class="list-group-item list-group-item-info rounded-pill">
                Персонаж:
            </li>
            <li class="list-group-item border-0">
                @Html.DisplayFor(model => model.Character.Name)
            </li>
        </ul>
        <ul class="list-group list-group-horizontal mt-2">
            <li class="list-group-item list-group-item-info rounded-pill">
                Необходимая характеристика:
            </li>
            <li class="list-group-item border-0">
                @Html.DisplayFor(model => model.Character_characteristic.Title)
            </li>
        </ul>
    </div>
    <div class="col-4">
        <img src="~/img/armor.png">
    </div>
</div>
<div class="mx-auto" style="width: 300px">
    <a class="btn btn-outline-info" asp-action="Index">Вернуться</a>
    @if (User.IsInRole("admin") || User.IsInRole("moderator"))
    {
        <a class="btn btn-outline-info" asp-action="Edit" asp-route-id="@Model.Id">Изменить</a>
    }
    @if (User.IsInRole("admin"))
    {
        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@Model.Id">Удалить</a>
    }
</div>