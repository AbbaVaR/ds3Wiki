@model ds3Wiki.Models.Magic

@{
    ViewData["Title"] = "Details";
}

<h1>Детали</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type_of_magic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type_of_magic.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Concentration_costs)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Concentration_costs)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Occupied_cells)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Occupied_cells)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-dark" asp-action="Index">Вернуться</a>
    @if (User.IsInRole("admin") || User.IsInRole("moderator"))
    {
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Изменить</a>
    }
</div>